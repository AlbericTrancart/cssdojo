{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "alwaysStrict": true,
    "incremental": true
  },
  "exclude": [
    ".next",
    "next.config.js"
  ],
  "include": [
    ".eslintrc.js",
    "**/*.ts",
    "**/*.tsx",
    "*/**.js",
    "*.js"
  ]
}
